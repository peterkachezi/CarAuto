

@model CarMatt.Data.DTOs.VehicleModule.CombinedDTO
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Html.PartialAsync("_header")




<section class="car-details" id="car-details">

    <div class="row">
        @if (Model.singleImageDTO == null || Model.vehicleDTO == null)
        {
            var url = "/Home/";

            Context.Response.Redirect(url);
        }
        else
        {
        <div class="col-md-6">
            <h1>
                <img src="~/uploads/@Model.singleImageDTO.ImageName" id="image" />
            </h1>

        </div>

        <div class="col-md-6">

            <h1 class="car-name">
                @Model.vehicleDTO.YearOfProduction @Model.vehicleDTO.FullName 	[@Model.vehicleDTO.BodyTypeName]
            </h1>

            <h1 class="car-price">
                @Model.vehicleDTO.Price.ToString("N") Ksh
            </h1>

            <div class="tables">
                <table summary="Car Spec">
                    <thead>
                        <tr>
                            <th colspan="2">Specs</th>
                        </tr>
                    </thead>

                    @*<tfoot>
                            <tr>
                                <th colspan="2">Options</th>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    Anti-Lock Brakes/Driver Airbag/Passenger Airbag/A/C:front/Power Steering/Remote Keyless Entry/Power Windows/Rear Window Defroster/Rear Window Wiper/AM/FM Radio/AM/FM Stereo/CD Player/Power Door Locks/Power Mirrors/No accidents
                                </td>
                            </tr>
                        </tfoot>*@

                    <tbody>
                        <tr>
                            <th>Registration Year</th>
                            <td>
                                2006/11
                            </td>
                        </tr>
                        <tr style="background-color: rgb(240, 240, 240);">
                            <th>Odometer</th>
                            <td>
                                96559km
                            </td>
                        </tr>
                        <tr>
                            <th>Displacement</th>
                            <td>
                                1500cc
                            </td>
                        </tr>
                        <tr style="background-color: rgb(240, 240, 240);">
                            <th>Steering</th>
                            <td>Right</td>
                        </tr>
                        <tr>
                            <th>Transmission</th>
                            <td>Automatic</td>
                        </tr>
                        <tr style="background-color: rgb(240, 240, 240);">
                            <th>Fuel</th>
                            <td>Gasoline/Petrol</td>
                        </tr>
                        <tr>
                            <th>Model code</th>
                            <td>DBA-NCP81G</td>
                        </tr>
                        <tr style="background-color: rgb(240, 240, 240);">
                            <th>VIN/Serial No.</th>
                            <td>NCP81-5018253</td>
                        </tr>
                        <tr>
                            <th>BodyType</th>
                            <td>Wagon  </td>
                        </tr>

                        <tr style="background-color: rgb(240, 240, 240);">
                            <th>Door</th>
                            <td>5</td>
                        </tr>

                        <tr>
                            <th>Passengers</th>
                            <td>7</td>
                        </tr>

                        <tr style="background-color: rgb(240, 240, 240);">
                            <th>Dimension</th>

                            <td>
                                4100mm ×1695mm ×1670mm (11.606m3)
                            </td>
                        </tr>
                        <tr>
                            <th>Exterior Color</th>
                            <td>Pearl</td>
                        </tr>

                        <tr style="background-color: rgb(240, 240, 240);">
                            <th>Drive Type</th>
                            <td>2wheel drive</td>
                        </tr>
                        <tr>
                            <th>ReferenceNo</th>
                            <td>N2021120448M-7</td>
                        </tr>
                    </tbody>
                </table>
            </div>




        </div>

        }




    </div>

</section>

<section>
    <div class="row">

        @if (Model.imageDTO != null)
                    {
                        foreach (var item in Model.imageDTO)
                        {
        <div class="col-sm-3">
            <div class="card">
                <img src="~/uploads/@item.ImageName" class="img-fluid" alt="Responsive image">

            </div>
        </div>

                        }
                    }


    </div>
</section>




@await Html.PartialAsync("_footer")

<style>

    #image {
        object-fit: contain;
        width: 100%;
    }



    .tables .car_spec table {
        border: 1px solid #b3b3b3;
        margin-top: 0;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
        margin: 10px auto;
    }
</style>
