                                                </a>
                                            </div>
                                            <div class="card-block">
                                                <h3 class="card-title">@item.FullName</h3>
                                                <p class="card-title">Ksh @item.Price.ToString("N")</p>
                                                <p class="card-title">@item.Engine</p>
                                                <p class="card-title">@item.Kilometres</p>
                                                <p class="card-title">@item.FuelType</p>
                                                <a href="~/Home/VehicleDetails/@item.Id" class="btn">Vew Details</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }

                        </div>
                    </div>
                </div>
            </section>


