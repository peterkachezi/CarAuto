    <section class="cars" id="cars">

        <h1 class="heading"> popular <span>vehicles</span> </h1>

        <div class="">

            <div class="row">

                @if (Model != null && Model.Count() > 0)
                {

                    foreach (var item in Model)
                    {
                        <div class="col-sm-3">
                            <div class="card">
                                <img src="~/uploads/@item.ImageName" />
                                <h3>@item.FullName</h3>
                                <div class="ml-3">

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="details"><strong>Engine :</strong>@item.Price.ToString("N")</div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="details"><strong>Engine :</strong>@item.Engine</div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="details"><strong>Body Type :</strong>@item.BodyTypeName</div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="details"><strong>Fuel :</strong>@item.FuelType</div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="details"><strong>Model :</strong>@item.ModelName</div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="details"><strong>Doors :</strong>@item.Doors</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <a href="~/home/VehicleDetails/@item.Id" class="checkout">check out</a>
                                </div>
                            </div>

                        </div>

                    }
                }

            </div>

        </div>



    </section>





