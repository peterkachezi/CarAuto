<script src="~/sweetalart/sweetalert.min.js"></script>



<script>


    $(document).ready(function () {

        $("#upload").click(function (evt) {

            var fileUpload = $("#files").get(0);

            var files = fileUpload.files;

            var data = new FormData();

            for (var i = 0; i < files.length; i++) {

                data.append(files[i].name, files[i]);

            }

            $.ajax({

                type: "POST",

                url: "/Administrator/Cars/UploadFilesAjax/",

                contentType: false,

                processData: false,

                data: data,

                success: function (message) {

                    alert(message);

                },

                error: function () {

                    alert("There was error uploading files!");

                }

            });

        });

    });

    $('#btnSubmit').click(function (evt) {


        $("#divLoader").show();
        // Stop the button from submitting the form:
        evt.preventDefault();

        // Serialize the entire form:
        var data = new FormData(this.form);


        $.ajax({
            url: "/Administrator/Cars/UploadFilesAjax3/",
            type: "POST",
            data: data,
            processData: false,
            contentType: false,


            success: function (response) {
                if (response.success) {

                    swal({
                        position: 'top-end',
                        type: "success",
                        title: response.responseText,
                        showConfirmButton: false,


                    }), setTimeout(function () { window.location = "/Administrator/Cars/"; }, 3000);

                } else {

                    swal({
                        position: 'top-end',
                        type: "error",
                        title: response.responseText,
                        showConfirmButton: true,
                        timer: 5000,
                    });

                    $("#divLoader").hide();
                }
            },

            error: function (response) {
                alert("error!");
            },
            complete: function () {
                HideLoader();
            }


        });

    });


    function GetModels() {

        var classId = $('#txtmakeId').val();

        console.log(classId);

        $.ajax({
            type: "GET",
            url: "/Administrator/Cars/GetModels/" + classId,
            data: "{}",

            success: function (data) {
                var s = '<option value="-1">Please Select a Model</option>';
                for (var i = 0; i < data.length; i++) {
                    s += '<option value="' + data[i].makeId + '">' + data[i].makeName + '</option>';
                }
                $("#departmentsDropdown").html(s);

                console.log(data);
            }


        });
    }




    //Allow users to enter numbers only
    $(".numericOnly").bind('keypress', function (e) {
        if (e.keyCode == '9' || e.keyCode == '16') {
            return;
        }
        var code;
        if (e.keyCode) code = e.keyCode;
        else if (e.which) code = e.which;
        if (e.which == 46)
            return false;
        if (code == 8 || code == 46)
            return true;
        if (code < 48 || code > 57)
            return false;
    });

    //Disable paste
    $(".numericOnly").bind("paste", function (e) {
        e.preventDefault();
    });

    $(".numericOnly").bind('mouseenter', function (e) {
        var val = $(this).val();
        if (val != '0') {
            val = val.replace(/[^0-9]+/g, "")
            $(this).val(val);
        }
    });






</script>


