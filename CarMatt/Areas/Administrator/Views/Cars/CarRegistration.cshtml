<script>


    function OpenProductPackingForm() {
        $("#ModalCreateProductPacking").modal('show');
    }


    $("#btnSubmit").click(function () {

        if ($('#txtCostPrice').val() == '') {
            $('#txtCostPrice').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Cost Price is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtSellingPrice').val() == '') {
            $('#txtSellingPrice').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Selling Price is a required field",
                showConfirmButton: true,
            });

            return false;
        }


        $("#ModalCreateProduct").modal('hide');

        $("#divLoader").show();

        var data = $("#frmCreateProduct").serialize();

        $.ajax({

            type: "POST",
            url: "/Administrator/Product/Create",
            data: data,

            success: function (response) {
                if (response.success) {

                    swal({
                        position: 'top-end',
                        type: "success",
                        title: response.responseText,
                        showConfirmButton: false,

                    }), setTimeout(function () { window.location = "/Administrator/Product/"; }, 3000);

                } else {

                    swal({
                        position: 'top-end',
                        type: "error",
                        title: response.responseText,
                        showConfirmButton: true,
                        timer: 5000,
                    });

                }
            },

            error: function (response) {
                alert("error!");

            }
        })

    })


    $("#btnSubmitPacking").click(function () {

        if ($('#txtName').val() == '') {
            $('#txtName').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Name is a required field",
                showConfirmButton: true,
            });

            return false;
        }




        $("#ModalCreateProductPacking").modal('hide');

        var data = $("#frmCreateProductPacking").serialize();

        $.ajax({

            type: "POST",
            url: "/Administrator/Packaging/Create",
            data: data,

            success: function (response) {
                if (response.success) {

                    swal({
                        position: 'top-end',
                        type: "success",
                        title: response.responseText,
                        showConfirmButton: false,

                    }), setTimeout(function () { location.reload(); }, 3000);

                } else {

                    swal({
                        position: 'top-end',
                        type: "error",
                        title: response.responseText,
                        showConfirmButton: true,
                        timer: 5000,
                    });

                }
            },

            error: function (response) {
                alert("error!");

            }
        })

    })

    //Allow users to enter numbers only
    $(".numericOnly").bind('keypress', function (e) {
        if (e.keyCode == '9' || e.keyCode == '16') {
            return;
        }
        var code;
        if (e.keyCode) code = e.keyCode;
        else if (e.which) code = e.which;
        if (e.which == 46)
            return false;
        if (code == 8 || code == 46)
            return true;
        if (code < 48 || code > 57)
            return false;
    });

    //Disable paste
    $(".numericOnly").bind("paste", function (e) {
        e.preventDefault();
    });

    $(".numericOnly").bind('mouseenter', function (e) {
        var val = $(this).val();
        if (val != '0') {
            val = val.replace(/[^0-9]+/g, "")
            $(this).val(val);
        }
    });






</script>


