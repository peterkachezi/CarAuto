<script src="~/Scripts/jquery-3.5.1.js"></script>
<link href="~/sweetalart/sweetalert.min.css" rel="stylesheet" />
<script src="~/sweetalart/sweetalert.min.js"></script>

<script>


    $(document).ready(function () {
        GetAllData();

    });

    function GetAllData() {

        var t = $('#tblExpenses').DataTable({
            "ajax": {
                "url": "/Administrator/Cars/GetVehicles",
                "type": "GET",
                "datatype": "json"
            },

            "columns": [

                { "data": "id" },
                { "data": "modelName" },
                { "data": "makeName" },
                { "data": "price" },
                { "data": "bodyTypeName" },
                { "data": "quantity" },
      
                { "data": "createdByName" },
                { "data": "newCreateDate" },
                {
                    data: null,
                    mRender: function (data, type, row) {
                        return "<a href='#' class='btn-sm success'    onclick=FetchCarDetails('" + row.id + "'); >Edit Details</a> / <a href='#' class='btn-sm btn-info'    onclick=ViewCarDetails('" + row.id + "'); >View Details</a>";

                    }
                }

            ]

        });
        t.on('order.dt search.dt', function () {
            t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();
    }

    function DeleteRecord(e) {

        $("#divLoader").show();
        var id = e;

        console.log(id);


        swal(

            {
                title: "Are you sure?",

                text: "Once deleted, you will not be able to recover this  file!",

                type: "success",

                showCancelButton: true,

                confirmButtonColor: "##62b76e",

                confirmButtonText: "Yes, Procceed!",

                closeOnConfirm: false
            },

            function () {

                $.ajax({

                    type: "GET",

                    url: "/Administrator/Cars/Delete/" + id,

                    success: function (response) {

                        if (response.success) {

                            swal({

                                position: 'top-end',

                                type: "success",

                                title: response.responseText,

                                showConfirmButton: false,

                                // timer: 2000,

                            });
                            setTimeout(function () { location.reload(); }, 3000);

                        }

                        else {
                            swal({
                                position: 'top-end',
                                type: "error",
                                title: response.responseText,
                                showConfirmButton: true,
                                timer: 5000,
                            });
                            $("#divLoader").hide();
                        }

                    },
                    error: function (response) {
                        swal({
                            position: 'top-end',
                            type: "error",
                            title: "Server error ,kindly contact the admin for assistance",
                            showConfirmButton: false,
                            timer: 5000,
                        });

                    }

                })

            }
        );
    }

    function SaveData() {

        if ($('#txtName').val() == '') {
            $('#txtName').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Name is a required field",
                showConfirmButton: true,
            });

            return false;
        }



        $("#divLoader").show();

        $("#ModalCreateCarMake").modal('hide');

        var data = $("#frmCreateCarMake").serialize();

        $.ajax({

            type: "POST",
            url: "/Administrator/Cars/Create",
            data: data,

            success: function (response) {
                if (response.success) {

                    swal({
                        position: 'top-end',
                        type: "success",
                        title: response.responseText,
                        showConfirmButton: false,

                    }), setTimeout(function () { location.reload(); }, 3000);

                } else {

                    swal({
                        position: 'top-end',
                        type: "error",
                        title: response.responseText,
                        showConfirmButton: true,
                        timer: 5000,
                    });

                    $("#divLoader").hide();
                }
            },

            error: function (response) {
                alert("error!");

                $("#divLoader").hide();
            }
        })

    }
    function UpdateData() {

        if ($('#txtName1').val() == '') {
            $('#txtName1').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Name is a required field",
                showConfirmButton: true,
            });

            return false;
        }


        $("#divLoader").show();
        $("#ModalUpdateExpenseType").modal('hide');

        var data = $("#frmUdateCarMake").serialize();

        $.ajax({

            type: "POST",
            url: "/Administrator/Cars/Update",
            data: data,

            success: function (response) {
                if (response.success) {

                    swal({
                        position: 'top-end',
                        type: "success",
                        title: response.responseText,
                        showConfirmButton: false,

                    }), setTimeout(function () { location.reload(); }, 3000);

                } else {

                    swal({
                        position: 'top-end',
                        type: "error",
                        title: response.responseText,
                        showConfirmButton: true,
                        timer: 5000,
                    });

                }
            },

            error: function (response) {
                alert("error!");

            }
        })

    }




    function FetchCarDetails(e) {

        var CarId = e;

        window.location.href = "/Administrator/Cars/UpdateInformation?Id=" + CarId;

    }

    function ViewCarDetails(e) {

        var CarId = e;

        window.location.href = "/Administrator/Cars/ViewInformation?Id=" + CarId;

    }



    //Allow users to enter numbers only
    $(".numericOnly").bind('keypress', function (e) {
        if (e.keyCode == '9' || e.keyCode == '16') {
            return;
        }
        var code;
        if (e.keyCode) code = e.keyCode;
        else if (e.which) code = e.which;
        if (e.which == 46)
            return false;
        if (code == 8 || code == 46)
            return true;
        if (code < 48 || code > 57)
            return false;
    });

    //Disable paste
    $(".numericOnly").bind("paste", function (e) {
        e.preventDefault();
    });

    $(".numericOnly").bind('mouseenter', function (e) {
        var val = $(this).val();
        if (val != '0') {
            val = val.replace(/[^0-9]+/g, "")
            $(this).val(val);
        }
    });

</script>







